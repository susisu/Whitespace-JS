#!/usr/bin/env node

/*
 * Whitespace-JS / ws2unws
 * copyright (c) 2016 Susisu
 */

"use strict";

const fs = require("fs");

const co = require("co");

const program = require("commander");

const ws = require("../lib/ws.js");
const packageInfo = require("../package.json");

process.title = "ws2unws";
process.stdin.setEncoding("utf8");

program.version(packageInfo.version + " (language version " + ws.LANGUAGE_VERSION + ")", "-v, --version");
program.arguments("<progfile>")
    .action(progfile => {
        co(function* () {
            const src = yield readFile(progfile, { encoding: "utf8" });
            const prog = ws.parser.ws(progfile, src);
            process.stdout.write(prog.map(inst => inst.toUnWhitespace()).join("\n") + "\n");
        }).catch(error => {
            process.stderr.write(String(error) + "\n");
            process.exit(1);
        });
    });
program.parse(process.argv);

function readFile(filename, options) {
    return new Promise((resolve, reject) => {
        fs.readFile(filename, options, (error, data) => {
            if (error) {
                reject(error);
            }
            else {
                resolve(data);
            }
        });
    });
}
